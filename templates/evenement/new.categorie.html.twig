{% extends 'base.html.twig' %}

{% block stylesheet %}
<style>
  .event-cat-card {
    background: rgba(10, 25, 45, 0.8);
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,0.08);
    box-shadow: 0 10px 30px rgba(0,0,0,0.45);
  }
  .event-cat-card h4 {
    letter-spacing: .08em;
    text-transform: uppercase;
  }

  .color-preview-wrapper {
    display: flex;
    align-items: flex-end;
    gap: 10px;
  }
  .color-preview-box {
    width: 38px;
    height: 38px;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.35);
    box-shadow: 0 0 12px rgba(0,0,0,0.7);
  }
  .color-preview-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    opacity: .7;
  }
</style>
{% endblock %}

{% block page %}
<div class="page-header mb-4">
  <h1 class="page-header-title text-white">
    Nouvelle catégorie d'événement
  </h1>
</div>

<div class="card event-cat-card">
  <div class="card-body text-white">
    <h4 class="mb-4 fw-bold">
      Nouvelle catégorie d'événement
    </h4>

    {{ form_start(form) }}
    <div class="row g-4 align-items-end">

      <div class="col-md-2">
        <label class="form-label d-block mb-1">Statut</label>
        <div class="form-check">
          {{ form_widget(form.enable, {'attr': {'class': 'form-check-input'}}) }}
          <label class="form-check-label" for="{{ form.enable.vars.id }}">Actif</label>
        </div>
      </div>

      <div class="col-md-4">
        {{ form_row(form.name) }}
      </div>

      <div class="col-md-2 text-end">
        <button class="btn btn-primary">
          <i class="bi bi-check2-circle me-1"></i> Enregistrer
        </button>
      </div>

    </div>
    {{ form_end(form) }}
  </div>

  <div class="card-arrow">
    <div class="card-arrow-top-left"></div>
    <div class="card-arrow-top-right"></div>
    <div class="card-arrow-bottom-left"></div>
    <div class="card-arrow-bottom-right"></div>
  </div>
</div>
{% endblock %}
