<div class="tab-pane fade" id="tab-invertebres">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-white mb-0">Liste des invertebres</h4>

        <a href="{{ path('app_invertebre_new', { id: aquarium.id }) }}"
           class="btn btn-sm btn-outline-warning">
            <i class="bi bi-eyedropper me-1"></i> Ajouter un invertebre
        </a>
    </div>

    {% if aquarium.invertebres|length == 0 %}
        <p class="text-white-50">Aucun invertebre pour le moment.</p>

    {% else %}
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Espèce</th>
                        <th class="text-center">Date Ajout</th>
                        <th class="text-center">Commentaire</th>
                        <th style="width:140px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for i in aquarium.invertebres %}
                    <tr>
                        <td class="text-center">{{ i.name ? i.name : '—' }}</td>
                        <td class="text-center">{{ i.espece ? i.espece.name : '—' }}</td>
                        <td class="text-center">{{ i.dateAjout ? i.dateAjout|date('d/m/Y') : '—' }}</td>

                        <td class="text-center">
                            {% if i.comment %}
                                <i class="bi bi-chat-left-text text-info"
                                data-bs-toggle="tooltip"
                                data-bs-placement="top"
                                title="{{ i.comment }}">
                                </i>
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('app_invertebre_edit', { aquarium:aquarium.id, id: i.id }) }}"
                               class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <form method="post"
                                  action="{{ path('app_invertebre_delete', { aquarium:aquarium.id, id: i.id }) }}"
                                  class="d-inline-block delete-test-form">
                                <input type="hidden" name="_token"
                                       value="{{ csrf_token('delete' ~ i.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
