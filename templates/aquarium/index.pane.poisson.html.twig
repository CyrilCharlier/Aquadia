<div class="tab-pane fade" id="tab-poissons">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-white mb-0">Liste des poissons</h4>

        <a href="{{ path('app_poisson_new', { id: aquarium.id }) }}"
           class="btn btn-sm btn-outline-warning">
            <i class="bi bi-eyedropper me-1"></i> Ajouter un poisson
        </a>
    </div>

    {% if aquarium.poissons|length == 0 %}
        <p class="text-white-50">Aucun poisson pour le moment.</p>

    {% else %}
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nom</th>
                        <th class="text-center">Espèce</th>
                        <th class="text-center">Genre</th>
                        <th class="text-center">Date Acquisition</th>
                        <th class="text-center">Commentaire</th>
                        <th style="width:140px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for p in aquarium.poissons %}
                    {% set genreLabel =
                        p.genre.value == 'MALE' ? 'Male' :
                        p.genre.value == 'FEMELLE' ? 'Femelle' :
                        'Indetermine'
                    %}
                    <tr>
                        <td class="text-center">{{ p.name ? p.name : '—' }}</td>
                        <td class="text-center">{{ p.espece ? p.espece.name : '—' }}</td>
                        <td class="text-center">{{ genreLabel }}</td>
                        <td class="text-center">{{ p.dateAcquisition ? p.dateAcquisition|date('d/m/Y') : '—' }}</td>

                        <td class="text-center">
                            {% if p.comment %}
                                <i class="bi bi-chat-left-text text-info"
                                data-bs-toggle="tooltip"
                                data-bs-placement="top"
                                title="{{ p.comment }}">
                                </i>
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('app_poisson_edit', { aquarium:aquarium.id, id: p.id }) }}"
                               class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <form method="post"
                                  action="{{ path('app_poisson_delete', { aquarium:aquarium.id, id: p.id }) }}"
                                  class="d-inline-block delete-test-form">
                                <input type="hidden" name="_token"
                                       value="{{ csrf_token('delete' ~ p.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
